<%- include('./partials/html-head') %>
<link rel="stylesheet" href="./stylesheets/home.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
<%- include('./partials/nav') %>

<main class="home">
  <h1 class="title-text">Hey, <%= user ? user.profile.name : "sign in to get started" %></h1>
  <% if (user?.profile.avatar) { %>
    <div>
      <img class="avatar"
        src="<%= user.profile.avatar %>"
        alt="<%= user.profile.name %> avatar"
      />
    </div>
  <% } %>
  <% if (user) { %>
    <h2 class="info-text"><span>Welcome home, lets get started with building your dream PC.</span></h2>
    <form action="/parts">
    <button class="build-btn">Start Building</button>
  </form>
  <% } %>
</main>

<%- include('./partials/footer') %>
